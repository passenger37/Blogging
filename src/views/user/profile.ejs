<%- include ('../partials/head.ejs') -%>
<link rel="stylesheet" href="/css/profilePage.css">
<div class="profile-page">
    <img src="profile.png"/>
    <form action="/updateProfile/<%= user._id %>" method="POST" class="profile-info">
        <div class="form-control" >
            <label for="name">Name</label>
            <input type="text" name="name" value="<%=user.name%>"/>
        </div>
        <div class="form-control">
            <label for="email">Email</label>
            <input type="email" name="email" value="<%=user.email%>"/>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit">Submit</button>
    </form>
</div>
<% article.forEach(article=>{%>
    <div class="single-article">
        <a href="/editarticle/<%= article._id %>">
            <div class="article">
                <h2><%= article.title %></h2><br/>
                <strong><%= article.entry.substring(1, 600) + "..." %></strong><br/>
            </div>
        </a>
            <div class="name">
                <a href="/profilepage/<%= article.owner._id%>"><small>by-<%= article.owner.name%></small></a>
            </div>
    </div>
    <% }) %>
<%- include ('../partials/footer.ejs') -%>